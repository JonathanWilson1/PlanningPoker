    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "antd": "^4.17.4",
    "next": "^12.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "socket.io": "^4.4.0",
    "socket.io-client": "^4.4.0",
    "sqlite": "^4.0.23",
    "sqlite3": "^5.0.2",
    "ua-parser-js": "^1.0.2",
    "uuid": "^8.3.2"
  }
